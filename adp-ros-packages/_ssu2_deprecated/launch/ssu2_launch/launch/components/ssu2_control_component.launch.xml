<?xml version="1.0"?>
<launch>
  <!-- optional parameters are written here -->
  <arg name="module_preset" default="default"/>
  <include file="$(find-pkg-share ssu_launch)/config/control/preset/$(var module_preset)_preset.yaml"/>

  <arg name="lateral_controller_mode" default="mpc"/>
  <arg name="longitudinal_controller_mode" default="pid"/>
  <arg name="use_individual_control_param" default="false"/>
  <!-- <arg name="use_aeb_ssu_state_check" default="true"/> -->
  <arg name="use_sim_time" default="true"/>
  <arg name="vehicle_model" default="sample_vehicle"/>

  <!-- package param path -->
  <arg name="vehicle_cmd_gate_param_path" value="$(find-pkg-share ssu_launch)/config/control/vehicle_cmd_gate/vehicle_cmd_gate.param.yaml"/>
  <arg name="control_command_gate_param_path" value="$(find-pkg-share ssu_launch)/config/control/control_command_gate/control_command_gate.param.yaml"/>
  <arg name="lane_departure_checker_param_path" value="$(find-pkg-share ssu_launch)/config/control/lane_departure_checker/lane_departure_checker.param.yaml"/>
  <arg name="control_validator_param_path" value="$(find-pkg-share ssu_launch)/config/control/control_validator/control_validator.param.yaml"/>
  <arg name="operation_mode_transition_manager_param_path" value="$(find-pkg-share ssu_launch)/config/control/operation_mode_transition_manager/operation_mode_transition_manager.param.yaml"/>
  <arg name="shift_decider_param_path" value="$(find-pkg-share ssu_launch)/config/control/shift_decider/shift_decider.param.yaml"/>
  <arg name="obstacle_collision_checker_param_path" value="$(find-pkg-share ssu_launch)/config/control/obstacle_collision_checker/obstacle_collision_checker.param.yaml"/>
  <arg name="external_cmd_selector_param_path" value="$(find-pkg-share ssu_launch)/config/control/external_cmd_selector/external_cmd_selector.param.yaml"/>
  <arg name="aeb_param_path" value="$(find-pkg-share ssu_launch)/config/control/ssu_autonomous_emergency_braking/autonomous_emergency_braking.param.yaml"/>
  <arg name="collision_detector_param_path" value="$(find-pkg-share ssu_launch)/config/control/ssu_collision_detector/collision_detector.param.yaml"/>
  <arg name="use_aeb_ssu_state_check" value="$(var use_aeb_ssu_state_check)"/>
  <arg name="predicted_path_checker_param_path" value="$(find-pkg-share ssu_launch)/config/control/predicted_path_checker/predicted_path_checker.param.yaml"/>
</launch>